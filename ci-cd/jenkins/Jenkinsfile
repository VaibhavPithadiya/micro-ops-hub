pipeline {
    agent any

    environment {
        // Local registry URL and image version
        REGISTRY_URL = "localhost:5000"
        IMAGE_VERSION = "1.0"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "üì¶ Checking out code..."
                checkout scm
            }
        }

        stage('Unit Tests') {
            parallel {
                stage('Users Service Tests') {
                    steps {
                        dir('services/users-service') {
                            echo "üß™ Running unit tests for Users Service..."
                            sh '''
                            docker run --rm -v $PWD:/app -w /app gradle:8.10-jdk21-alpine gradle clean test --no-daemon
                            '''
                        }
                    }
                }
                stage('Orders Service Tests') {
                    steps {
                        dir('services/orders-service') {
                            echo "üß™ Running unit tests for Orders Service..."
                            sh '''
                            docker run --rm -v $PWD:/app -w /app gradle:8.10-jdk21-alpine gradle clean test --no-daemon
                            '''
                        }
                    }
                }
            }
        }

        stage('Docker Build') {
            parallel {
                stage('Users Image') {
                    steps {
                        dir('services/users-service') {
                            sh """
                            docker build -t $REGISTRY_URL/users-service:$IMAGE_VERSION .
                            """
                        }
                    }
                }
                stage('Orders Image') {
                    steps {
                        dir('services/orders-service') {
                            sh """
                            docker build -t $REGISTRY_URL/orders-service:$IMAGE_VERSION .
                            """
                        }
                    }
                }
                stage('Frontend Image') {
                    steps {
                        dir('services/frontend') {
                            sh """
                            docker build -t $REGISTRY_URL/frontend:$IMAGE_VERSION .
                            """
                        }
                    }
                }
            }
        }

        stage('Push to Local Registry') {
            steps {
                sh """
                docker push $REGISTRY_URL/users-service:$IMAGE_VERSION
                docker push $REGISTRY_URL/orders-service:$IMAGE_VERSION
                docker push $REGISTRY_URL/frontend:$IMAGE_VERSION
                """
            }
        }

        stage('Smoke Test (Docker Compose)') {
            steps {
                echo "üöÄ Running smoke tests..."
                sh """
                docker compose up -d
                sleep 5
                curl -f http://localhost:8080/users/health
                curl -f http://localhost:8081/orders/health
                curl -f http://localhost:8082/
                docker compose down
                """
            }
        }
    }

    post {
        always {
            echo "üßπ Cleaning workspace..."
            cleanWs()
        }
        success {
            echo "‚úÖ Pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed. Check logs!"
        }
    }
}
